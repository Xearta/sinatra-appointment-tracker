<h3>Appointment Information</h3>
<table style="width:100%">
  <tr>
    <th>Patient Name</th>
    <th>Age</th>
    <th>Appointment Date/Time</th>
    <th>Options</th>
    <th>Delete Appointment</th>
  </tr>
  <tr>
    <td><a href="/patients/<%=@patient.id%>"><%= @patient.name %></td>
    <td><%= @patient.age %> </td>
    <td><%= @appointment.appointment_date.strftime("%m/%d/%Y %I:%M %p") %></td>
    <td>
      <a class="btn btn-info" href="/appointments">Home</a>
      <a class="btn btn-warning" href="/appointments/<%=@appointment.id%>/edit">Edit</a>
    </td>
    <td>
      <form method="post" action="/appointments/<%= @appointment.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input class="btn btn-danger" type="submit" value="Delete Appointment">
      </form>
    </td>
  </tr>
</table>
